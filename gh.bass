(provide [cli]
  (def dur
    (load (.durations)))

  (import (load (*dir*/wget))
          wget)

  (def gh-deb-url
    "https://github.com/cli/cli/releases/download/v2.3.0/gh_2.3.0_linux_amd64.deb")

  (def cli
    (from "ubuntu"
      (with-label ($ apt update) :at (dur:daily))
      ($ apt -y install (wget gh-deb-url ./gh.deb)))))
